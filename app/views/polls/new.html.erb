<% provide(:title, "Create a new poll") %>

<h1>Sign up</h1>

<div class="row">
  <div class="span6">
    <%= form_for(@poll) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.submit "Create Poll", class: "btn btn-large btn-primary" %>
      
    <% end %>
  </div>
</div>